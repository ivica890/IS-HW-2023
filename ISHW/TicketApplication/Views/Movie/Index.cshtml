@using TicketApplication.Models.Models;
@model List<Movie>


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Movies list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Movie" asp-action="Create"  class="btn btn-outline-primary">
                <i class="bi bi-plus-circle"></i>Add a new movie
            </a>
        </div>
    </div>

    
<table class="table table-bordered table-striped" >
    <thead>
    <tr>
        <th>Movie Name</th>
        <th>Release Year</th>
        <th>Ticket price</th>
        <th>Category</th>
        <th></th>
    </tr>
    </thead>

    <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.ReleaseYear</td>
                    <td>@obj.TicketPrice</td>
                    <td>@obj.Category.Name</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Movie" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                        </div>
                        <div class="btn-group" role="group">
                            <a asp-controller="Movie" asp-action="Delete" asp-route-id="@obj.Id" class="btn bnt-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
    </tbody>
</table>

</div>
