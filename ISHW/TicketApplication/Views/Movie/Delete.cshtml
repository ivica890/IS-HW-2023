@using TicketApplication.Models.Models;
@model Movie


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Delete a movie</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label>Release Year</label>
            <input asp-for="ReleaseYear" class="form-control" disabled />
            <span asp-validation-for="ReleaseYear" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label>Description</label>
            <input asp-for="Description" class="form-control" disabled />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label>Duration</label>
            <input asp-for="Duration" class="form-control" disabled />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label>Category</label>
            <input asp-for="Category" class="form-control" />
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label>Ticket price</label>
            <input asp-for="TicketPrice" class="form-control" disabled />
            <span asp-validation-for="TicketPrice" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Movie" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back to movie list
                </a>
            </div>
        </div>
    </div>

</form>