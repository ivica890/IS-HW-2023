@using TicketApplication.Models.Models;
@model List<MovieShowing>


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Movie showing list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="MovieShowing" asp-action="Create" class="btn btn-outline-primary">
                <i class="bi bi-plus-circle"></i>Add a new movie showing
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Movie Name</th>
                <th>Cinema hall</th>
                <th>Available seats</th>
                <th>Start time</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Movie.Name</td>
                    <td>@obj.CinemaHall.Name</td>
                    <td>@obj.AvailableSeats</td>
                    <td>@obj.StartTime</td>
                    <td>             
                        <div class="btn-group" role="group">
                            <a asp-controller="MovieShowing" asp-action="Delete" asp-route-id="@obj.Id" class="btn bnt-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>