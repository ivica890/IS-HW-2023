@using TicketApplication.Models.Models;
@model MovieShowing


<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Delete a movie showing</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row">
            <label>Movie</label>
            <input asp-for="Movie.Name" disabled />
        </div>
        <div class="mb-3 row">
            <label>Cinema hall</label>
            <input asp-for="CinemaHall.Name" disabled />
        </div>

        <div class="mb-3 row">
            <label>Available seats</label>
            <input asp-for="AvailableSeats" disabled />
        </div>
        <div class="mb-3 row">
            <label>Start time</label>
            <input asp-for="StartTime" class="form-control" disabled />
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="MovieShowing" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back to movie showings list
                </a>
            </div>
        </div>
    </div>

</form>